<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="actividad14.unidad3.inacap.cl.proyectoversiones.EliminarClienteActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:id="@+id/lvClientes"
            android:layout_weight="0.35"
            android:background="@color/accent_material_light" />

        <TextView
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ID del Cliente a Eliminar:"
            android:id="@+id/textView9" />

        <EditText
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtIdCliente" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar Cliente"
            android:id="@+id/cmdEliminar" />

        <Button
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:id="@+id/cmdCancelar" />
    </LinearLayout>

</RelativeLayout>
