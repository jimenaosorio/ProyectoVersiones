<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="actividad14.unidad3.inacap.cl.proyectoversiones.MenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrar Clientes"
        android:id="@+id/cmdClientes"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/cmdVolver" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrar Pedidos"
        android:id="@+id/cmdPedidos"
        android:layout_below="@+id/cmdClientes"
        android:layout_alignLeft="@+id/cmdClientes"
        android:layout_alignStart="@+id/cmdClientes"
        android:layout_marginTop="47dp"
        android:layout_alignRight="@+id/cmdClientes"
        android:layout_alignEnd="@+id/cmdClientes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:id="@+id/cmdVolver"
        android:layout_marginBottom="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

